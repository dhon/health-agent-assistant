extends layout

block content
  div.container<center>
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title <font size=7>Sign in</font>
          div.account-wall
            img(height='200' width='200' class='profile-img', src='http://i1.wp.com/www.techrepublic.com/bundles/techrepubliccore/images/icons/standard/icon-user-default.png')
            form(class='form-signin', action='/login', method='POST')
              input(size='20' type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
              </br>
              input(size='20' type='password', name='password' class='form-control', placeholder='Password', required)
              </br>
              button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
              span.clearfix
          #message
          if message
            h1.text-center.error-message #{message}